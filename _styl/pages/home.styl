/*--------------------------------------------------------------------
* $HOME
--------------------------------------------------------------------*/
.content
  max-width: 1100px;
  margin: 0 auto;
  
.content-home
  margin-left: 50px;
  @media only screen and (max-width: 800px)
      margin-left: 0;
  
.gradient
  background: rgb(242,3,3);
  background: linear-gradient(90deg, rgba(242,3,3,1) 0%, rgba(255,232,29,1) 33%, rgba(60,227,137,1) 66%, rgba(69,180,255,1) 100%);
  height: 5px;
  width: 100%;
    
.home
  
  #intro
    text-align: left
    margin: 0 auto
    color: $gray

    h1, h2, h3, h4, h5, h6
      margin: 40px 0;
      
      &:last-child
        margin-bottom: 0;
      
    h1
      font-size: 40px;
      margin-top: 25px;
      
    h2
      font-size: 32px;
      @media only screen and (max-width: 800px)
        font-size: 28px;
      
      
    h3
      font-size: 22px;
      
    h4
      font-size: 18px;
      
    h5
      font-size: 14px;
      
    h6
      font-size: 10px;
      

    .rainbow
      margin: 20px 0;

    .main-pic
      border-radius: 50%;
      margin: 0 auto;
      opacity: .95;
      margin-bottom: 25px;
      width: 200px;
    
    .overlay
      background-color: $purple;
  
  h2
    font-size: 40px;
      
  #info
    padding: 80px 0;
    
    h2
      font-size: 40px;
      margin-bottom: 40px;
      
  #cta
    background-color: none;
    padding: 60px 0;
    text-align: center;
    color: $white;
    
    a
      color: $white;
      border-color: $white;
