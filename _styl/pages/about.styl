/*--------------------------------------------------------------------
* $ABOUT
--------------------------------------------------------------------*/

.about
  
  .content
    max-width: 1100px;
  
  h1
    font-size: 44px;
    margin-bottom: 20px;
    text-align: left;
    
  .pets {
    border-radius: 50%;
    width: 150px;
  }

  .grid
    display: flex;
    justify-content: space-between;
    margin-bottom: 40px;
    flex-direction: row-reverse;
      
    @media only screen and (max-width: 800px)
      padding-top: 0;
      display: block;
      justify-content: none;
  
    .col-sm
      width: 40%;
      
      @media only screen and (max-width: 800px)
        width: 100%;

    .col-md
      width: 60%;

      @media only screen and (max-width: 800px)
        width: 100%;

  .img-wrap {
    padding: 85px 0 0 40px;

    @media only screen and (max-width: 800px) {
      padding: 0 18%;
      text-align: center;
      margin-bottom: 20px;    
    }

    img.bio {
      border: 3px solid $blue;
      border-radius: 50%;
    }
    
  }
  
  blockquote
    margin: 0 auto;
    
  p
    font-size: 20px;
    line-height: 1.75em;
    
  p, h3
    padding: 5px 0;
    
  h3
    padding-bottom: 0;
    margin-bottom: 5px;
    
  ul
    margin-bottom: 20px;
    list-style-type: circle;
    
    li
      list-style-position: inside;
  
  .gifs
    margin: 0 auto;
    text-align: center;
    
    h3
      margin-bottom: 15px;
    
    img
      text-align: center;
      margin: 15px auto 0;
      height: 200px;
      
      &.block
        display: block;
        
      &.mr-10
        margin-right: 15px;
      
@media only screen and (max-width: 630px)
      
  .about .pic
    width: 80%;
   
  .about .gifs img
    height: auto;
    
  .about h1.title
    padding-top: 20px;
