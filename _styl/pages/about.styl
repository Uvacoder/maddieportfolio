/*--------------------------------------------------------------------
* $ABOUT
--------------------------------------------------------------------*/

.about
  
  .content
    max-width: 1100px;
  
  h1.title
    font-size: 40px;
    text-align: left;
    padding: 20px 0 0;
    
  .pets {
    border-radius: 50%;
    width: 150px;
  }

  .img-wrap {
    float: right;
    padding-top: 50px;

    @media only screen and (max-width: 800px) {
      float: none;
      padding-top: 0;
      text-align: center;
      margin-bottom: 30px;    
    }

    img.bio {
      border-radius: 50%;
      width: 260px;
    }
    
  }
    
  .text-wrap {
    float: left;
    width: 65%;
    
      @media only screen and (max-width: 800px) {
      float: none;
      width: 100%;
    }
  }

  .pic-wrap
    text-align: center;
    margin: 0 auto;
  
    .pic
      text-align: center;
      margin: 0 auto;
      margin-bottom: 25px;
      max-width: 500px;
  
  blockquote
    margin: 0 auto;
    
  p
    font-size: 20px;
    line-height: 1.75em;
    
  p, h3
    padding: 5px 0;
    
  h3
    padding-bottom: 0;
    margin-bottom: 5px;
    
  ul
    margin-bottom: 20px;
    list-style-type: circle;
    
    li
      list-style-position: inside;
  
  .gifs
    margin: 0 auto;
    text-align: center;
    
    h3
      margin-bottom: 15px;
    
    img
      text-align: center;
      margin: 15px auto 0;
      height: 200px;
      
      &.block
        display: block;
        
      &.mr-10
        margin-right: 15px;
      
@media only screen and (max-width: 630px)
      
  .about .pic
    width: 80%;
   
  .about .gifs img
    height: auto;
    
  .about h1.title
    padding-top: 20px;
