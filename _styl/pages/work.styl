  .small
    font-size: 16px;
    margin: 20px 0 0;
          
  .case-studies
    
    h2.project-title
      text-align: center;
      margin-bottom: 30px;
    
    h3 
      font-style: italic;
      
    figure
      margin: 20px 0;
      
      img
        padding: 10px 0 0;
        
      small
        font-size: 12px;
      
    hr
      margin: 60px auto 50px;
      width: 100%;
      border: 0 none;
      height: 2px;
      
      &.teal
        background: $work-teal;
        
      &.pink
        background: $work-pink;
        
      &.light-blue
        background: $work-light-blue;
        
    .balancing-act
      margin-top: 20px;
      
      a
        border-bottom-color: $work-teal;
      
      button
        border: 2px solid $work-teal;
        
        a
          color: $work-teal;
        
        
    .simplewebrtc
