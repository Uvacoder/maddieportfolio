/*--------------------------------------------------------------------
* $WORK
--------------------------------------------------------------------*/

.work
  
  h1.title
    padding-bottom: 0;
  
  .work-wrap

    margin: 30px 0 0;
    max-width: 49%;
    float: left;
    margin-right: 2%;
    
    &:nth-child(even)
      margin-right: 0;
    
    .logo-wrap
      
      margin: 0 auto;
      height: 250px;
      max-width: 100%;
      text-align: center;

      img
        position: relative;
        top: 40%;
        max-width: 75%;
      
      img.large
        top: 30%;

    .work-info
      border: 2px solid;
      padding: 30px;
      min-height: 275px;

      p.small
        font-size: 12px;
        padding-bottom: 5px;
        margin-bottom: 0;
      
    .button-wrap
      margin: 20px 10px 0 0;
      
  .light-blue
    .logo-wrap
      background-color: $work-light-blue;
    .work-info
      border-color: $work-light-blue;
      background-color: $work-light-blue-fade;

      button
        border: 2px solid $work-light-blue;
        
        a
          color: $work-light-blue;

      
  .dark-blue
