    .open-ideo
      a
        border-bottom-color: $work-light-blue;
        
      button
        border: 2px solid $work-light-blue;
        
        a
          color: $work-light-blue;


  @media only screen and (max-width: 800px)
    .work-wrap
      float: none;
      max-width: 100%;
      margin: 30px 0 0;
      
    .work-wrap .logo-wrap img.large
      top: 15%;
      
    .work-wrap .logo-wrap img.med
      top: 20%;
      
    .work-wrap .work-info
      min-height: 210px;
      
  @media only screen and (max-width: 630px)
    header ul.main-nav
      padding-bottom: 10px;
      
  @media only screen and (max-width: 530px)
    .work-wrap .logo-wrap img.large
      top: 20%;
      
    .work-wrap .logo-wrap img.med
      top: 30%;
