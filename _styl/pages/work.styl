/*--------------------------------------------------------------------
* $WORK
--------------------------------------------------------------------*/

.work
  
  .content
    max-width: 1200px;

  h1.title
    text-align: left;
    padding-bottom: 0;
  
  .work-grid
    display: flex;
    justify-content: space-between;
    
    @media only screen and (max-width: 800px)
      display: block;
      width: 100%;
    
    .work-col
      width: 32%;
      text-align: center;
      
      @media only screen and (max-width: 800px)
        width: 100%;
      
      a
        display: inline-block;
        &:hover
          opacity: .8
          
      .link
        background: none;

      img
        margin: 0 auto;
        display: block;

    .work-logo-col
      width: 32%;
      text-align: center;
      padding: 20px;

      a
        background: none;
      
      img
        width: 65%;
        &:hover
            opacity: .8;
      
      @media only screen and (max-width: 600px)
        width: 100%;

        img
          width: 60%;
                
        
/*--------------------------------------------------------------------
* $CASE STUDIES
--------------------------------------------------------------------*/

.case-study
  .full
    width: 100%;
  
  .content
    max-width: 1200px;
    
  .logo
    max-width: 600px;
    
  #intro
    img
      margin-bottom: 40px;
          
    h1, h2
      text-align: left;
      
  #main
    p
      margin: 60px 0;
      
  .cs-grid
    display: flex;
    
  .cs-col
    flex: 1;
    
  .cs-grid-2
    margin: 40px 0;
    display: flex;
    justify-content: space-between;
    
  .cs-col-2
    width: 48%;

    
