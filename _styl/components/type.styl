/*--------------------------------------------------------------------
* $TYPE
--------------------------------------------------------------------*/

body
  font-family: $font-family-roboto
  font-size: 18px
  line-height: 1.4
  color: $gray

h1, h2, h3, h4
  font-family: $font-family-roboto
  font-weight: bold
  margin: 0 0 1em
  
h1
  text-align: center;
  
p
  margin: 0 0 1em

h1
  font-size: 28px

  a
    color: $purple
    
h1.title
  text-transform: uppercase;
  font-size: 24px;

h2
  font-size: 24px
  margin-bottom: .25em

h3
  font-size: 20px

a
  text-decoration: none

em
  font-style: italic

strong
  font-weight: $font-weight-semibold

small
  font-size: 14px
  color: $grey-med

.content a,
.container a
  border-bottom: 2px solid $blue
  text-decoration: none
  color: $gray
  &:hover
    opacity: .8;
