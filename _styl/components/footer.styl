/*--------------------------------------------------------------------
* $FOOTER
--------------------------------------------------------------------*/

footer
    
  .content
    margin-bottom: 0;
  
    padding: 50px 0;

    p, a
      font-size: 16px;

    .flex-grid
      display: flex;
      
      @media only screen and (max-width: 800px)
          display: block;
    
    .col
      flex: 1;
      
      @media only screen and (max-width: 800px)
          text-align: center;
      
    .social
      text-align: right;
      @media only screen and (max-width: 800px)
          text-align: center;

      a
        color: $green;
        font-size: 30px;
        transition: 0.2s ease all
        position: relative
        &:not(:last-child) {
          margin-right: 5px;
        }
        
        @media only screen and (max-width: 800px)
          font-size: 36px;

        &:hover, &:active
          opacity: .8
          top: 1px
        
    .middle
      
      a
        background: linear-gradient(to top, #FFE81D 10%,transparent 10%)
        color: $gray
        &:hover
          opacity: .8
      
    ul
      margin-bottom: 0;
      
      li
        display: inline;
        border-right: 1px solid $gray;
        padding: 0 12px;
        
        &:last-child
          border-right: 0;
          padding-right: 0;
        
        a
          font-size: 18px;
          border-bottom: none;
  